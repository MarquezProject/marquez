{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "lib": ["es2016", "es2017", "dom"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "downlevelIteration": true
  },
  "include": ["./src/**/*"],
  "exclude": ["./src/__tests__/*"]
}
