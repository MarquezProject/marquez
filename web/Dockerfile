FROM node:18-alpine
WORKDIR /usr/src/app

# Define build arguments
ARG REACT_APP_ADVANCED_SEARCH
ARG REACT_APP_OKTA_CLIENT_ID
ARG REACT_APP_OKTA_ISSUER
ARG REACT_APP_FAVICON_PNG_URL
ARG REACT_APP_FAVICON_SVG_URL


RUN apk update && apk add --virtual bash coreutils
RUN apk add --no-cache git
COPY package*.json ./

# Set environment variables for the build
ENV REACT_APP_ADVANCED_SEARCH=${REACT_APP_ADVANCED_SEARCH}
ENV REACT_APP_OKTA_CLIENT_ID=${REACT_APP_OKTA_CLIENT_ID}
ENV REACT_APP_OKTA_ISSUER=${REACT_APP_OKTA_ISSUER}
ENV REACT_APP_FAVICON_PNG_URL=${REACT_APP_FAVICON_PNG_URL}
ENV REACT_APP_FAVICON_SVG_URL=${REACT_APP_FAVICON_SVG_URL}

RUN npm install
COPY . .
RUN REACT_APP_ADVANCED_SEARCH=$REACT_APP_ADVANCED_SEARCH npm run build
COPY docker/entrypoint.sh entrypoint.sh
EXPOSE 3000
ENTRYPOINT ["/usr/src/app/entrypoint.sh"]