        },
        "children": {
          "type": "array",
          "items": {
            "anyOf": [
              {
                "$ref": "#/definitions/BaseLogicalPlan"
              },
              {
                "$ref": "#/definitions/LogicalRelation"
              },
              {
                "$ref": "#/definitions/InsertIntoHadoopFsRelationCommand"
              }
            ]
          }
        }
      }
    },
    "InsertIntoHadoopFsRelationCommand": {
      "properties":{
        "outputPath": {
          "type": "string"
        }
      }
    },
    "LogicalRelation": {
      "properties":{
        "relation": {
          "anyOf": [
            {
              "$ref": "#/definitions/HadoopFsRelation"
            },
            {
              "$ref": "#/definitions/JDBCRelation"
            }
          ]
        }
      }
    },
    "HadoopFsRelation": {
      "properties":{
        "relation": {
